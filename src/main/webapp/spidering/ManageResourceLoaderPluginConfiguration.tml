<t:layout xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
    <div class="page-header">
        <h1>Manage Resource Loader Plugin Configuration</h1>
    </div>

    <div class="list-group" style="width:50%">
        <div class="list-group-item">
            <t:form class="box-holder" t:id="resourceLoaderPluginConfigurationForm">
                <t:errors />
                <div class="form-group">
                    <t:label for="name">Name</t:label>
                    <t:textfield t:id="name" t:value="resourceLoaderPluginConfiguration.name" t:validate="required" />
                </div>
                <div class="form-group">
                    <t:label for="groovyCode">Groovy Code</t:label>
                    <t:textarea t:id="groovyCode" t:value="resourceLoaderPluginConfiguration.groovyCode" t:validate="required" style="width:800px;height:600px" />
                </div>
                <div class="box-foot form-foot">
                    <button type="submit">Save</button>
                    <t:pagelink page="spidering/resourceLoaderPluginConfigurationIndex" class="button button-cancel">Cancel</t:pagelink>
                </div>
            </t:form>
        </div>
    </div>

</t:layout>